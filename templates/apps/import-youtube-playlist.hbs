<form id="playlist-yt-import" autocomplete="off" onsubmit="event.preventDefault();">
	<p class="notes">{{localize 'Bellows.ImportPlaylist.Notes'}}</p>
	<div class="form-group">
		<div class="form-fields">
			<input type="text" id="bellows-yt-import-url-text" placeholder="https://www.youtube.com/playlist?list=PLccmC0-jXVkiQF1uMehdwqSlpXafNAe_e">
			<button type="button" id="bellows-yt-import-btn-import" name="import"><i class="fas fa-file-import"></i></button>
		</div>
	</div>
	{{#if working}}
	<div class="playlist-import-loading-spinner"></div>
	{{/if}}
	{{#if playlistItems}}
	<div class="form-group">
		<label for="bellows-yt-import-playlist-name">{{localize 'Bellows.ImportPlaylist.Labels.Name'}}:</label>
		<input type="text" id="bellows-yt-import-playlist-name" name="playlistname" required>
	</div>
	<div class="form-group">
		<label for="bellows-yt-import-playlist-volume">{{localize 'Bellows.ImportPlaylist.Labels.Volume'}}:</label>
		<input type="range" class="sound-volume" id="bellows-yt-import-playlist-volume" val="0.5" min="0" max="1" step="0.05" name="playlistvolume">
	</div>
	<section class="playlist-import-container">
		<ol>
			{{#each playlistItems}}
			<li>
				{{this.title}}
			</li>
			{{/each}}
		</ol>
	</section>
	{{/if}}
	<button type="submit" id="bellows-yt-import-btn-confirm" name="submit" {{#unless playlistItems}}disabled{{/unless}}>
		<i class="fas fa-file-download"></i>{{localize 'Bellows.ImportPlaylist.Buttons.Submit'}}
	</button>
</form>
